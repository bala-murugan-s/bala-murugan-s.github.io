  "categories": [
    {
      "name": "Ad-Hoc Commands",
      "icon": "‚ö°",
      "commands": [
        {
          "command": "ansible all -m ping",
          "description": "Test connectivity to all hosts",
          "usage": "Quick check if Ansible can reach your servers",
          "example_output": "web1 | SUCCESS => {\n    \"changed\": false,\n    \"ping\": \"pong\"\n}\nweb2 | SUCCESS => {\n    \"changed\": false,\n    \"ping\": \"pong\"\n}",
          "flags": [
            { "flag": "-i inventory", "desc": "Specify inventory file" },
            { "flag": "--limit host", "desc": "Limit to specific host" }
          ],
          "tags": ["beginner", "daily-driver"],
          "danger": "safe"
        },
        {
          "command": "ansible all -m shell -a 'uptime'",
          "description": "Run shell command on all hosts",
          "usage": "Execute one-off commands without writing playbooks",
          "example_output": "web1 | CHANGED | rc=0 >>\n 15:23:45 up 42 days,  3:14,  1 user,  load average: 0.00, 0.01, 0.05",
          "flags": [
            { "flag": "-b", "desc": "Become root (sudo)" },
            { "flag": "-K", "desc": "Prompt for sudo password" }
          ],
          "tags": ["intermediate", "daily-driver"],
          "danger": "warning"
        },
        {
          "command": "ansible all -m copy -a 'src=/local/file dest=/remote/path'",
          "description": "Copy file to remote hosts",
          "usage": "Quick file distribution without playbook",
          "example_output": "web1 | CHANGED => {\n    \"changed\": true,\n    \"dest\": \"/remote/path\",\n    \"src\": \"/local/file\"\n}",
          "flags": [
            { "flag": "-b", "desc": "Use sudo for copying" }
          ],
          "tags": ["intermediate"],
          "danger": "safe"
        }
      ]
    },
    {
      "name": "Playbook Execution",
      "icon": "üìã",
      "commands": [
        {
          "command": "ansible-playbook playbook.yml",
          "description": "Run an Ansible playbook",
          "usage": "Execute automation tasks defined in playbook",
          "example_output": "PLAY [webservers] **********\n\nTASK [Install nginx] *****\nok: [web1]\nchanged: [web2]\n\nPLAY RECAP ***************\nweb1 : ok=3  changed=0\nweb2 : ok=3  changed=1",
          "flags": [
            { "flag": "-i inventory", "desc": "Specify inventory" },
            { "flag": "--check", "desc": "Dry run (don't make changes)" },
            { "flag": "--diff", "desc": "Show file changes" },
            { "flag": "-v/-vv/-vvv", "desc": "Increase verbosity" }
          ],
          "tags": ["beginner", "daily-driver"],
          "danger": "warning"
        },
        {
          "command": "ansible-playbook playbook.yml --check --diff",
          "description": "Dry run with change preview",
          "usage": "Test playbook without making actual changes",
          "example_output": "TASK [Update config file] ***\n--- before: /etc/app/config.yml\n+++ after: /tmp/ansible-tmp/config.yml\n@@ -2,1 +2,1 @@\n-debug: false\n+debug: true\nchanged: [web1]",
          "flags": [
            { "flag": "--start-at-task='TASK'", "desc": "Start at specific task" }
          ],
          "tags": ["intermediate", "production"],
          "danger": "safe"
        },
        {
          "command": "ansible-playbook playbook.yml --tags TAG",
          "description": "Run only tagged tasks",
          "usage": "Execute subset of tasks (e.g., only deploy, skip setup)",
          "example_output": "PLAY [webservers] **********\n\nTASK [Deploy application] [tagged: deploy]\nchanged: [web1]\n\nPLAY RECAP ***************\nweb1 : ok=1  changed=1",
          "flags": [
            { "flag": "--skip-tags TAG", "desc": "Skip specific tags" },
            { "flag": "--list-tags", "desc": "Show available tags" }
          ],
          "tags": ["advanced", "daily-driver"],
          "danger": "safe"
        }
      ]
    },
    {
      "name": "Debugging & Troubleshooting",
      "icon": "üêõ",
      "commands": [
        {
          "command": "ansible-playbook playbook.yml -vvv",
          "description": "Run with maximum verbosity",
          "usage": "Debug connection or execution issues",
          "example_output": "ESTABLISH SSH CONNECTION FOR USER: ubuntu\nSSH: EXEC ssh -vvv -C -o ControlMaster=auto...\ndebug2: key: /home/user/.ssh/id_rsa (0x5641234)\n<web1> ESTABLISH SSH CONNECTION FOR USER: ubuntu",
          "flags": [
            { "flag": "--step", "desc": "Confirm each task before running" }
          ],
          "tags": ["advanced", "debug"],
          "danger": "safe"
        },
        {
          "command": "ansible-playbook playbook.yml --syntax-check",
          "description": "Validate playbook syntax",
          "usage": "Check for YAML errors before running",
          "example_output": "playbook: playbook.yml",
          "flags": [],
          "tags": ["beginner", "daily-driver"],
          "danger": "safe"
        },
        {
          "command": "ansible-inventory --list",
          "description": "Display parsed inventory",
          "usage": "Debug inventory variables and group assignments",
          "example_output": "{\n  \"webservers\": {\n    \"hosts\": [\"web1\", \"web2\"],\n    \"vars\": {\"http_port\": 80}\n  }\n}",
          "flags": [
            { "flag": "--graph", "desc": "Show inventory tree" },
            { "flag": "--host HOST", "desc": "Show host-specific vars" }
          ],
          "tags": ["intermediate", "debug"],
          "danger": "safe"
        }
      ]
    }
  ]
}