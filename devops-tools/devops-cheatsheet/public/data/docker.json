          "flags": [
            { "flag": "-d", "desc": "Detached mode (background)" },
            { "flag": "-p HOST:CONTAINER", "desc": "Port mapping" },
            { "flag": "--name NAME", "desc": "Assign container name" },
            { "flag": "-e VAR=value", "desc": "Set environment variable" },
            { "flag": "-v /host:/container", "desc": "Mount volume" }
