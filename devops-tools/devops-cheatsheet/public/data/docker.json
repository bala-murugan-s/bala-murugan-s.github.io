          "flags": [
            { "flag": "-t SECONDS", "desc": "Timeout before force kill (default 10s)" }
          ],
          "tags": ["beginner"],
          "danger": "safe"
        },
        {
          "command": "docker rm CONTAINER",
          "description": "Remove stopped container",
          "usage": "Clean up container (must be stopped first)",
          "example_output": "web",
          "flags": [
            { "flag": "-f", "desc": "Force remove running container" },
            { "flag": "-v", "desc": "Remove associated volumes" }
          ],
          "tags": ["beginner"],
          "danger": "warning"
        }
      ]
    },
