{
  "tool": "Kubernetes",
  "icon": "‚ò∏Ô∏è",
  "categories": [
    {
      "name": "Pod Operations",
      "icon": "üì¶",
      "commands": [
        {
          "command": "kubectl get pods",
          "description": "List all pods in current namespace",
          "usage": "Quick overview of running containers",
          "example_output": "NAME                    READY   STATUS    RESTARTS   AGE\nnginx-7d8b49557-4xq2l   1/1     Running   0          2d\nredis-6b4c7d5f9-xs7km   1/1     Running   1          5d",
          "flags": [
            { "flag": "-n NAMESPACE", "desc": "Specify namespace" },
            { "flag": "-A", "desc": "All namespaces" },
            { "flag": "-o wide", "desc": "More details (IPs, nodes)" },
            { "flag": "--watch", "desc": "Watch for changes" }
          ],
          "tags": ["beginner", "daily-driver"],
          "danger": "safe"
        },
        {
          "command": "kubectl describe pod POD_NAME",
          "description": "Show detailed pod information",
          "usage": "Debug pod issues, see events and state",
          "example_output": "Name:         nginx-7d8b49557-4xq2l\nNamespace:    default\nNode:         worker-1\nStatus:       Running\nIP:           10.244.1.5\nEvents:\n  Normal  Scheduled  2m   Successfully assigned\n  Normal  Pulling    2m   Pulling image \"nginx:1.21\"\n  Normal  Started    1m   Started container nginx",
          "flags": [],
          "tags": ["intermediate", "debug"],
          "danger": "safe"
        },
        {
          "command": "kubectl logs POD_NAME",
          "description": "View container logs",
          "usage": "Check application output and errors",
          "example_output": "2024-01-15 10:23:45 [info] Server started on port 8080\n2024-01-15 10:24:12 [error] Database connection failed\n2024-01-15 10:24:13 [info] Retrying connection...",
          "flags": [
            { "flag": "-f", "desc": "Stream logs (follow)" },
            { "flag": "--tail=N", "desc": "Show last N lines" },
            { "flag": "-c CONTAINER", "desc": "Specific container in pod" },
            { "flag": "--previous", "desc": "Logs from crashed container" }
          ],
          "tags": ["beginner", "daily-driver"],
          "danger": "safe"
        },
        {
          "command": "kubectl exec -it POD_NAME -- /bin/bash",
          "description": "Open shell in running container",
          "usage": "Debug issues interactively inside container",
          "example_output": "root@nginx-7d8b49557-4xq2l:/# ls\nbin  boot  dev  etc  home  lib  media  mnt  opt  proc  root  run  sbin  srv  sys  tmp  usr  var\nroot@nginx-7d8b49557-4xq2l:/#",
          "flags": [
            { "flag": "-c CONTAINER", "desc": "Specify container in multi-container pod" }
          ],
          "tags": ["intermediate", "debug"],
          "danger": "safe"
        },
        {
          "command": "kubectl delete pod POD_NAME",
          "description": "Delete a pod",
          "usage": "Force pod restart (deployment will recreate it)",
          "example_output": "pod \"nginx-7d8b49557-4xq2l\" deleted",
          "flags": [
            { "flag": "--force", "desc": "Force immediate deletion" },
            { "flag": "--grace-period=0", "desc": "No graceful shutdown" }
          ],
          "tags": ["intermediate"],
          "danger": "warning"
        }
      ]
    },
    {
      "name": "Deployment Management",
      "icon": "üöÄ",
      "commands": [
        {
          "command": "kubectl get deployments",
          "description": "List all deployments",
          "usage": "See application deployment status",
          "example_output": "NAME    READY   UP-TO-DATE   AVAILABLE   AGE\nnginx   3/3     3            3           5d\nredis   1/1     1            1           10d",
          "flags": [
            { "flag": "-n NAMESPACE", "desc": "Specific namespace" },
            { "flag": "-o wide", "desc": "Show images and selectors" }
          ],
          "tags": ["beginner", "daily-driver"],
          "danger": "safe"
        },
        {
          "command": "kubectl scale deployment DEPLOY --replicas=5",
          "description": "Scale deployment up or down",
          "usage": "Adjust number of running pods",
          "example_output": "deployment.apps/nginx scaled",
          "flags": [],
          "tags": ["intermediate", "daily-driver"],
          "danger": "warning"
        },
        {
          "command": "kubectl rollout status deployment DEPLOY",
          "description": "Watch deployment rollout progress",
          "usage": "Monitor ongoing deployment updates",
          "example_output": "Waiting for deployment \"nginx\" rollout to finish: 1 of 3 updated replicas are available...\ndeployment \"nginx\" successfully rolled out",
          "flags": [],
          "tags": ["intermediate", "production"],
          "danger": "safe"
        },
        {
          "command": "kubectl rollout undo deployment DEPLOY",
          "description": "Rollback to previous deployment",
          "usage": "Recover from bad deployment",
          "example_output": "deployment.apps/nginx rolled back",
          "flags": [
            { "flag": "--to-revision=N", "desc": "Rollback to specific revision" }
          ],
          "tags": ["advanced", "production"],
          "danger": "warning"
        },
        {
          "command": "kubectl set image deployment/DEPLOY CONTAINER=IMAGE:TAG",
          "description": "Update container image",
          "usage": "Deploy new version of application",
          "example_output": "deployment.apps/nginx image updated",
          "flags": [
            { "flag": "--record", "desc": "Record command in revision history" }
          ],
          "tags": ["intermediate", "production"],
          "danger": "warning"
        }
      ]
    },
    {
      "name": "Troubleshooting",
      "icon": "üîç",
      "commands": [
        {
          "command": "kubectl get events --sort-by='.lastTimestamp'",
          "description": "View cluster events chronologically",
          "usage": "Find recent issues and warnings",
          "example_output": "LAST SEEN   TYPE      REASON              MESSAGE\n2m          Warning   FailedScheduling    0/3 nodes available\n1m          Normal    Scheduled           Successfully assigned\n30s         Normal    Pulled              Container image pulled",
          "flags": [
            { "flag": "-n NAMESPACE", "desc": "Namespace-specific events" },
            { "flag": "--watch", "desc": "Watch for new events" }
          ],
          "tags": ["intermediate", "debug"],
          "danger": "safe"
        },
        {
          "command": "kubectl top pods",
          "description": "Show CPU/memory usage of pods",
          "usage": "Identify resource-hungry containers",
          "example_output": "NAME                    CPU(cores)   MEMORY(bytes)\nnginx-7d8b49557-4xq2l   5m           128Mi\nredis-6b4c7d5f9-xs7km   12m          256Mi",
          "flags": [
            { "flag": "--containers", "desc": "Show per-container metrics" },
            { "flag": "-A", "desc": "All namespaces" }
          ],
          "tags": ["intermediate", "debug"],
          "danger": "safe"
        },
        {
          "command": "kubectl get pod POD -o yaml",
          "description": "Export pod config as YAML",
          "usage": "Inspect full pod specification",
          "example_output": "apiVersion: v1\nkind: Pod\nmetadata:\n  name: nginx-7d8b49557-4xq2l\nspec:\n  containers:\n  - name: nginx\n    image: nginx:1.21",
          "flags": [
            { "flag": "-o json", "desc": "Export as JSON instead" }
          ],
          "tags": ["advanced", "debug"],
          "danger": "safe"
        }
      ]
    }
  ]
}